@model CarRental.WebApp.Areas.UserPanel.Models.ModifyReservationEquipmentVM

@{
    ViewBag.Title = "Modify";
}

<h2>Modify</h2>

@using (Html.BeginForm("Modify", "ReservationEquipment", FormMethod.Post, new { area = "UserPanel" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(model => model.ReservationId)

        @if (Model.Equipments.Any())
        {
            <div class="form-group">
                @Html.LabelFor(model => model.EquipmentId, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.EquipmentId, new SelectList(Model.Equipments, "Id", "Name"))
                </div>
            </div>
        }

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
</div>
